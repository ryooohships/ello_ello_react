# Backend Configuration
EXPO_PUBLIC_BACKEND_URL=https://elloello-backend.onrender.com
EXPO_PUBLIC_API_VERSION=v1

# Twilio Configuration
EXPO_PUBLIC_USE_REAL_TWILIO=false
EXPO_PUBLIC_DEFAULT_IDENTITY=+1234567890

# App Environment
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_DEBUG_MODE=true

# Push Notification Configuration (iOS)
# You'll need to generate these from Apple Developer Portal
EXPO_PUBLIC_APPLE_PUSH_KEY_ID=YOUR_KEY_ID
EXPO_PUBLIC_APPLE_TEAM_ID=YOUR_TEAM_ID

# Twilio Push Credentials (for production)
# These are obtained from Twilio Console after uploading your Apple Push Certificate
TWILIO_PUSH_CREDENTIAL_SID=YOUR_TWILIO_PUSH_CREDENTIAL_SID

# EAS Build Secrets (set these in EAS dashboard)
# eas secret:create TWILIO_ACCOUNT_SID --scope project --type string
# eas secret:create TWILIO_AUTH_TOKEN --scope project --type string
# eas secret:create TWILIO_API_KEY_SID --scope project --type string
# eas secret:create TWILIO_API_KEY_SECRET --scope project --type string